<!-- app/views/users/new.html.erb -->

<h1>New User</h1>

<%= form_with model: @user, url: users_path, method: :post do |form| %>
  <!-- Your form fields go here -->
  <div>
    <%= form.label "Username Here:" %>
    <%= form.text_field :username, :value => "Test" %>
  </div>

  <div>
    <%= form.label :email %>
    <%= form.email_field :email, placeholder: "email@example.com" %>
  </div>

  <div>
  <%= form.label :password %>
  <%= form.password_field :password %>
  </div>

  <div>
    <%= form.submit "Create User" %>
  </div>
<% end %>
